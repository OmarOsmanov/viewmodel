@model List<Product>
@{

    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}



<div class="container">
    <div class="row">
        <div>
            <a asp-area="admin" asp-controller="product" asp-action="create" class="btn btn-success">Create</a>
        </div>
        <div class="col-lg-12">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Image</th>
                        <th scope="col">Name</th>
                        <th scope="col">Price</th>
                        <th scope="col">User</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @{ int i = 0;}
                    @foreach (var item in Model)
                    {
                        i++;

                    <tr>
                        <th scope="row">@i</th>
                        <td><img src="~/Uploads/@item.Image" alt="Alternate Text" style="max-height:150px;max-width:150px" /></td>
                        <td>@item.Name</td>
                        <td>@item.Price</td>
                        @*<td>@item.User.Name</td>*@

                        <td>
                            <a asp-area="admin" asp-controller="product" asp-action="update" asp-route-id="@item.Id" class="btn btn-success">Update</a>
                            <a asp-area="admin" asp-controller="product" asp-action="delete" asp-route-id="@item.Id" onclick="return confirm('eminsen?')" class="btn btn-danger">Delete</a>

                        </td>
                    </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>