@model List<Setting>
@{
    
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div>
            <a asp-area="admin" asp-controller="settings" asp-action="create" class="btn btn-success">Create</a>
        </div>
        <div class="col-lg-12">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Logo</th>
                        <th scope="col">Tittle</th>
                        <th scope="col">Subtitle</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @{ int i = 0;}
                    @foreach (var item in Model)
                    {
                        i++;

                    <tr>
                        <th scope="row">@i</th>
                        <td>@item.Logo</td>
                        <td>@item.Tittle</td>
                        <td>@item.Subtitle</td>
                        <td>
                            <a asp-area="admin" asp-controller="settings" asp-action="update" asp-route-id="@item.Id" class="btn btn-success">Update</a>
                            <a asp-area="admin" asp-controller="settings" asp-action="delete" asp-route-id="@item.Id" onclick="return confirm('eminsen?')" class="btn btn-danger">Delete</a>

                        </td>
                    </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>